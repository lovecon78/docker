FROM centos:7
MAINTAINER lovecon78@hanmail.net
LABEL "OS Version"="Centos 7"
#blue-centos7-docker:latest

RUN yum -y update; \
    yum-config-manager --add-repo https://download.docker.com/linux/centos/docker-ce.repo; \
    yum -y install \
    sudo \
    vim \
    net-tools \
    curl \
    openssh-server \
    docker-ce

#사용자(loveconx) 추가
RUN useradd -m -s /bin/bash loveconx
RUN echo 'gkskfh^^66' | passwd --stdin loveconx

RUN groupmod -g 499 docker
RUN usermod -aG docker loveconx

USER loveconx

#SSH 접속포트 설정
EXPOSE 22